// -------------------------------------------------------
// Roots global settings variables
// -------------------------------------------------------

// font stacks
minion = "Minion-Pro", Georgia, Cambria, Times, "Times New Roman", serif
myriad = "Myriad-Pro", "Helvetica Neue", Helvetica, Arial, sans-serif

// default font stack
font-stack = minion
font-size = 24
font-color = #555

// colors
red = #B44326
orange = #F2A34F
mimosa = #efc050
orchid = #b163a3
yellow = #F8CA5C
green = #7FC028
light-blue = #52D7FE
blue = #00a6fc
purple = #8E48C2
white = #fff
black = #272727
gray = #888
light-gray = #e4e4e4

// default color
default-color = blue

// text hilight color
hilight-color = blue

// vendor prefixes
vendors = webkit moz o ms official

// custom image base path for roots mixins
img-path = ''

// progressive internet explorer (http://css3pie.com/)
pie-enabled = false
pie-path = '/pie.htc'

// grid system settings (http://semantic.gs)
column-width = 60px
gutter-width = 20px
columns = 12
